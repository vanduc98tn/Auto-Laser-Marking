<Window x:Class="Development.WndAlarm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Development"
        mc:Ignorable="d"
        Title="WndAlarm" 
         Topmost="True"
         Height="800"
         Width="980"
         AllowsTransparency="True"
         WindowStartupLocation="CenterScreen"
         WindowStyle="None"
         BorderThickness="1"
         BorderBrush="Black"
         Background="White">
    <Grid Margin="1,0,1,0" MouseDown="Grid_MouseDown">



        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Foreground" Value="#4A4A4A"/>
                <Setter Property="FontSize" Value="13"/>
            </Style>

            <Style x:Key="ModernTextBox" TargetType="TextBox">
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#DCDDE1"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
                <Setter Property="Margin" Value="5,2"/>
            </Style>

            <Style x:Key="ErrorSideButtonStyle" TargetType="Button">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Margin" Value="0,1,0,1" />
                <Setter Property="Background" Value="#FF7675" />
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                        BorderBrush="White" BorderThickness="0,0,0,1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D63031"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>


        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="120"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>


            <Border Grid.Row="0" Background="#2D3436" CornerRadius="4,4,0,0">
                <Label Content="ERROR DIAGNOSTIC SYSTEM" Foreground="White" 
                        FontWeight="Bold" VerticalAlignment="Center" Margin="15,0" FontSize="14"/>
            </Border>


            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"></ColumnDefinition>
                    <ColumnDefinition Width="1"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="0"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.Resources>

                    <Style TargetType="Button" BasedOn="{StaticResource ssButton}">
                        <Setter Property="FontSize" Value="20" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="0,5,5,5" />
                        <Setter Property="Background" Value="#FF6A6A" />
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>

                </Grid.Resources>
                <Grid Grid.Column="0">
                    <ScrollViewer CanContentScroll="True" Name="scrollView" VerticalScrollBarVisibility="Auto" Grid.Row="2">
                        <StackPanel Orientation="Vertical" x:Name="StackpanlButton">
                            <Button x:Name="btnError0"  Height="50">1</Button>
                            <Button x:Name="btnError1"  Height="50">2</Button>
                            <Button x:Name="btnError2"  Height="50">3</Button>
                            <Button x:Name="btnError3"  Height="50">4</Button>
                            <Button x:Name="btnError4"  Height="50">5</Button>
                            <Button x:Name="btnError5"  Height="50">6</Button>
                            <Button x:Name="btnError6"  Height="50">7</Button>
                            <Button x:Name="btnError7"  Height="50">8</Button>
                            <Button x:Name="btnError8"  Height="50">9</Button>
                            <Button x:Name="btnError9"  Height="50">10</Button>
                            <Button x:Name="btnError10"  Height="50">11</Button>
                            <Button x:Name="btnError11"  Height="50">12</Button>
                            <Button x:Name="btnError12"  Height="50">13</Button>
                            <Button x:Name="btnError13"  Height="50">14</Button>
                            <Button x:Name="btnError14"  Height="50">15</Button>
                            <Button x:Name="btnError15"  Height="50">16</Button>
                            <Button x:Name="btnError16"  Height="50">17</Button>
                            <Button x:Name="btnError17"  Height="50">18</Button>
                            <Button x:Name="btnError18"  Height="50">19</Button>
                            <Button x:Name="btnError19"  Height="50">20</Button>
                        </StackPanel>

                    </ScrollViewer>

                </Grid>
                <Grid Grid.Column="1" Background="Black"></Grid>
                
                <Grid Grid.Column="2" Margin="2 0 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.2*"></RowDefinition>
                        <RowDefinition Height="4*"></RowDefinition>
                        <RowDefinition Height="6*"></RowDefinition>
                        <RowDefinition Height="0.9*"></RowDefinition>

                    </Grid.RowDefinitions>



                    <UniformGrid Rows="2" Columns="2" Margin="0,0,0,15">
                        <DockPanel>
                            <TextBlock Text="TIME" Width="60" FontWeight="Bold"/>
                            <TextBox x:Name="txtTime" Style="{StaticResource ModernTextBox}" Background="#2D3436" Foreground="#00FF00" Text="--:--:--"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock Text="CODE" Width="60" FontWeight="Bold"/>
                            <TextBox x:Name="txtCode" Style="{StaticResource ModernTextBox}" Foreground="#0984E3"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock Text="SEQID" Width="60" FontWeight="Bold"/>
                            <TextBox x:Name="txtSeqId" Style="{StaticResource ModernTextBox}"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock Text="MODE" Width="60" FontWeight="Bold"/>
                            <TextBox x:Name="txtMode" Style="{StaticResource ModernTextBox}" FontWeight="Bold"/>
                        </DockPanel>
                    </UniformGrid>


                    <Grid Grid.Row="1">

                        <Grid.Resources>
                            <Style TargetType="Label">
                                <Setter Property="Background" Value="RoyalBlue"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="2,2,2,2"/>
                                <Setter Property="Padding" Value="0,0,0,0"/>
                            </Style>
                            <Style TargetType="TextBox">
                                <Setter Property="IsReadOnly" Value="True"/>
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="VerticalContentAlignment" Value="Top"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                            </Style>
                        </Grid.Resources>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" ></RowDefinition>
                            <RowDefinition Height="3" ></RowDefinition>
                            <RowDefinition Height="5*"></RowDefinition>
                        </Grid.RowDefinitions>

                        
                        
                        
                        <Border Margin="0,0,0,0" Background="#2D3436" CornerRadius="6">
                            <DockPanel>
                                <Border DockPanel.Dock="Top" Background="#34495E" CornerRadius="6,6,0,0" Padding="10,5">
                                    <TextBlock Text="EVENT MESSAGE" Foreground="White" FontWeight="Bold"/>
                                </Border>
                                <TextBox x:Name="txtMessage" Background="Transparent" Foreground="Yellow" BorderThickness="0"
                                             TextWrapping="Wrap" AcceptsReturn="True" Margin="10" FontSize="14" IsReadOnly="True" 
                                             VerticalScrollBarVisibility="Auto" Text="Waiting for data..."/>
                            </DockPanel>
                        </Border>

                        
                        
                        
                        <Border Grid.Row="2" Margin="0,0,0,0" Background="#2D3436" CornerRadius="6">
                            <DockPanel>
                                <Border DockPanel.Dock="Top" Background="#34495E" CornerRadius="6,6,0,0" Padding="10,5">
                                    <TextBlock Text="PROPOSED SOLUTION" Foreground="White" FontWeight="Bold"/>
                                </Border>
                                <TextBox x:Name="txtSolution" Background="Transparent" Foreground="White" BorderThickness="0"
                                            TextWrapping="Wrap" AcceptsReturn="True" Margin="10" FontSize="14" IsReadOnly="True" 
                                            VerticalScrollBarVisibility="Auto" Text="N/A"/>
                            </DockPanel>
                        </Border>

                    </Grid>
                    
                    <Grid Grid.Row="2 ">
                        <Viewbox Stretch="Uniform">
                            <Grid>
                                <Image Name="SavedImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Canvas Name="DrawingCanvas"
                               Background="Transparent" >
                                    <!-- Các phần tử khác của Canvas -->
                                </Canvas>
                            </Grid>
                        </Viewbox>
                    </Grid>

                    <Grid Grid.Row="3">
                        <Grid.Resources>

                            <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                                <Setter Property="FontSize" Value="20" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Margin" Value="0,0,0,0" />
                                <Setter Property="Background" Value="#6787c0" />
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>

                        </Grid.Resources>

                        <Button Grid.Row="3" x:Name="btnClose" Content="CLOSE SYSTEM" Width="220" Height="48" Margin="0,0,0,0"
                                Background="#6787c0" Foreground="White" FontSize="18" FontWeight="Bold" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="24">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="GreenYellow"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                    </Grid>

                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>


            <Border Background="#636E72" Margin="1">
                <Label Content="SYSTEM" Foreground="White" FontWeight="Bold" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13"/>
            </Border>


            <ScrollViewer Grid.Row="1" x:Name="scrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Grid Grid.Row="1" x:Name="GridButton">
                    <Grid.Resources>

                        <Style TargetType="Button" BasedOn="{StaticResource ssButton}">
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Stretch" />
                            <Setter Property="Background" Value="White" />
                            <Setter Property="Margin" Value="1,1,1,1" />
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="#6787c0"/>
                            <Setter Property="FontSize" Value="13" />
                            <Setter Property="Margin" Value="1 0 1 0"/>
                        </Style>

                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Foreground" Value="Black" />
                            <Setter Property="Padding" Value="1,0" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontSize" Value="13" />
                        </Style>
                    </Grid.Resources>
                </Grid>
            </ScrollViewer>
        </Grid>




    </Grid>
</Window>
