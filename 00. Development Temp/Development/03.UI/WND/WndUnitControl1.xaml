<Window x:Class="Development.WndUnitControl1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Development"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterScreen" Topmost="False"
        Title="WndUnitControl1" Height="600" Width="800" ResizeMode="NoResize" BorderThickness="5" BorderBrush="Yellow"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="180"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1" Background="{StaticResource HeaderBackground}" Margin="0,5,5,5" CornerRadius="12">
            <Grid>
                <StackPanel Margin="10">
                    <Label Content="SYSTEM MENU" Foreground="White" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,10,0,20"/>

                    <Button x:Name="btMenuTab00" Background="SteelBlue" Foreground="White" BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        WORK1
                    </Button>
                    <!--<Button x:Name="btMenuTab01"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        LOADER MGZ
                    </Button>
                    <Button x:Name="btMenuTab02"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        TRANSFER
                    </Button>
                    <Button x:Name="btMenuTab03"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        UNLOADER MGZ
                    </Button>
                    <Button x:Name="btMenuTab04"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        MATRIX SETTINGS
                    </Button>-->

                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="15">
                    <TextBlock Text="ITM" Foreground="#AED6F1" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Semiconductor" Foreground="White" Opacity="0.7" FontSize="12"/>
                    <TextBlock Text="AUTOMATION TEAM" Foreground="White" Opacity="0.5" FontSize="10"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Column="0" Margin="0 0 2 0">
            <Grid.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="2 0 30 0" />
                    <Setter Property="Background" Value="#6787c0" />
                    <Setter Property="BorderThickness" Value="0.7"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="23" />
                    <Setter Property="FontFamily" Value="Arial"/>
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="Foreground" Value="White"/>
                </Style>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid>
                                    <Border Name="Border"
                                             Background="LightGray"
                                             BorderBrush="#333333"
                                             BorderThickness="0.5"
                                             CornerRadius="1"
                                             Margin="1"
                                             SnapsToDevicePixels="True">
                                        <Grid>
                                            <ContentPresenter x:Name="ContentSite"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               ContentSource="Header"
                                               Margin="10,2"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#333333" />
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#333333" />
                                        <Setter Property="Foreground" Value="White" />

                                        <Setter TargetName="Border" Property="BorderThickness" Value="2" />

                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="LightGray" />
                                        <Setter TargetName="Border" Property="BorderBrush" Value="Gray" />
                                        <Setter Property="Foreground" Value="Black" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1" />

                                    </Trigger>

                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">

                <Border Grid.Row="0" Background="{StaticResource HeaderBackground}" Margin="5,5,5,5" CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="UNIT CONTROL" Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,0,0">
                            <Label.Effect>
                                <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                            </Label.Effect>
                        </Label>
                        <local:PLCButton
                            Grid.Column="1"
                            UseLampCodition="True"
                            Background="Transparent"
                            Foreground="Black"
                            FontSize="20"
                            Action="Momentary"
                            DeviceWrite="L" AddressWrite="7"
                            DeviceLamp="L" AddressLamp="10007"
                            BackgroundLampOFF="LightGray"
                            BackgroundLampON="Yellow"
                            Content="RESET"
                            IsComfrim="False"
                            IsMesComfrim="Confrim Go To POS"
>
                        </local:PLCButton>
                        <Button Grid.Column="3" x:Name="btClose" Margin="2">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="01.Image/Close.png" Margin="2"></Image>
                                <TextBlock VerticalAlignment="Center" Padding="5,0,0,0">Close</TextBlock>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
                <!--<Button Grid.Column="1" Margin="4" x:Name="BtnSave" Width="150" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                       
                        <TextBlock VerticalAlignment="Center" Padding="15,0,0,0">Save</TextBlock>
                    </StackPanel>
                </Button>-->
            </Grid>
            
        </Grid>


    </Grid>
</Window>
