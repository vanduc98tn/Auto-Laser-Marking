            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="220"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" Background="{StaticResource HeaderBackground}" Margin="0,5,5,5" CornerRadius="12">
                <Grid>
                    <StackPanel Margin="10">
                        <Label Content="SYSTEM MENU" Foreground="White" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,10,0,20"/>

                        <Button x:Name="btSetting1" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}" Content="IO" Background="#2980B9" Foreground="White" BorderThickness="0"/>
                        <Button x:Name="btSetting2" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="10 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}" Content="IO OUTPUT" Visibility="Hidden"/>
                      
                    </StackPanel>

                    <StackPanel VerticalAlignment="Bottom" Margin="15">
                        <TextBlock Text="ITM" Foreground="#AED6F1" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Semiconductor" Foreground="White" Opacity="0.7" FontSize="12"/>
                        <TextBlock Text="AUTOMATION TEAM" Foreground="White" Opacity="0.5" FontSize="10"/>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid Grid.Column="0">
                <Grid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                        <Setter Property="FontSize" Value="24" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="2" />
                        <Setter Property="Background" Value="#6787c9" />
                        <Setter Property="BorderThickness" Value="0"/>

                    </Style>


                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="20"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">

