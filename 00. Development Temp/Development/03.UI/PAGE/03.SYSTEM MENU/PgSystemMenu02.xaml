<Page x:Class="Development.PgSystemMenu02"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Development"
      mc:Ignorable="d" 
     d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgSystemMenu02">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="220"></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <Border Grid.Column="1" Background="{StaticResource HeaderBackground}" Margin="0,5,5,5" CornerRadius="12">
            <Grid>
                <StackPanel Margin="10">
                    <Label Content="SYSTEM MENU" Foreground="White" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,10,0,20"/>

                    <Button x:Name="btMenuTab01"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        OPTIONS PC
                    </Button>
                    <Button x:Name="btMenuTab02" Background="SteelBlue" Foreground="White" BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        OPTIONS MACHINE
                    </Button>

                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="15">
                    <TextBlock Text="ITM" Foreground="#AED6F1" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Semiconductor" Foreground="White" Opacity="0.7" FontSize="12"/>
                    <TextBlock Text="AUTOMATION TEAM" Foreground="White" Opacity="0.5" FontSize="10"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Column="0">
            <Grid.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="2 0 30 0" />
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="AliceBlue" />
                    <Setter Property="BorderThickness" Value="0.7"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="23" />
                    <Setter Property="FontFamily" Value="Arial"/>
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>



            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border Grid.Row="0" Background="{StaticResource HeaderBackground}" Margin="5,5,5,5" CornerRadius="8">
                    <Label Content="SYSTEM MES MACHINE" Foreground="White" FontSize="24" FontWeight="Bold" 
                            VerticalAlignment="Center" Margin="20,0,0,0">
                        <Label.Effect>
                            <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                        </Label.Effect>
                    </Label>
                </Border>
            </Grid>
            <Grid Grid.Row="1" Margin="10,0,10,0">

                <Grid.Resources>
                    <Style TargetType="local:PLCButton">
                        <Setter Property="IsTabItem" Value="False"/>
                        <Setter Property="Margin" Value="1"/>
                        <Setter Property="UseLampCodition" Value="True"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="5 0 0 0"/>
                    </Style>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <!--<ColumnDefinition Width="*"/>-->
                </Grid.ColumnDefinitions>


                <UniformGrid Grid.Column="0" Columns="1" Rows="10" Margin="0 0 10 0">
                    <local:PLCButton
                        Action="Momentary"
                        DeviceWrite="L" AddressWrite="500"
                        DeviceLamp="L" AddressLamp="10500"
                        BackgroundLampOFF="Transparent"
                        BackgroundLampON="Red"
                        TextOFF="DRYRUN OFF"
                        TextON="DRYRUN ON"
                        IsComfrim="True"
                        IsMesComfrim="Confrim Options Yes/No"
>
                    </local:PLCButton>
                    <local:PLCButton
                        Action="Momentary"
                        DeviceWrite="L" AddressWrite="501"
                        DeviceLamp="L" AddressLamp="10501"
                        BackgroundLampOFF="Transparent"
                        BackgroundLampON="Red"
                        TextOFF="STEPRUN OFF"
                        TextON="STEPRUN ON"
                        IsComfrim="True"
                        IsMesComfrim="Confrim Options Yes/No"
>
                    </local:PLCButton>
                    <local:PLCButton
                        Action="Momentary"
                        DeviceWrite="L" AddressWrite="502"
                        DeviceLamp="L" AddressLamp="10502"
                        BackgroundLampOFF="Transparent"
                        BackgroundLampON="Red"
                        TextOFF="ENA BUZZER"
                        TextON="DIS BUZZER"
                        IsComfrim="True"
                        IsMesComfrim="Confrim Options Yes/No"
>
                    </local:PLCButton>
                    <local:PLCButton
                        Action="Momentary"
                        DeviceWrite="L" AddressWrite="503"
                        DeviceLamp="L" AddressLamp="10503"
                        BackgroundLampOFF="Transparent"
                        BackgroundLampON="Red"
                        TextOFF="ENA KACON"
                        TextON="DIS KACON"
                        IsComfrim="True"
                        IsMesComfrim="Confrim Options Yes/No"
>
                    </local:PLCButton>
                    <local:PLCButton
                        Action="Momentary"
                        DeviceWrite="L" AddressWrite="504"
                        DeviceLamp="L" AddressLamp="10504"
                        BackgroundLampOFF="Transparent"
                        BackgroundLampON="Red"
                        TextOFF="ENA LOCKDOOR"
                        TextON="DIS LOCKDOOR"
                        IsComfrim="True"
                        IsMesComfrim="Confrim Options Yes/No"
>
                    </local:PLCButton>
                    <local:PLCButton
                        Action="Momentary"
                        DeviceWrite="L" AddressWrite="505"
                        DeviceLamp="L" AddressLamp="10505"
                        BackgroundLampOFF="Transparent"
                        BackgroundLampON="Red"
                        TextOFF="ENA SAFETY SEN"
                        TextON="DIS SAFETY SEN"
                        IsComfrim="True"
                        IsMesComfrim="Confrim Options Yes/No"
>
                    </local:PLCButton>

                </UniformGrid>
                
            </Grid>
            
        </Grid>

    </Grid>
    
</Page>
