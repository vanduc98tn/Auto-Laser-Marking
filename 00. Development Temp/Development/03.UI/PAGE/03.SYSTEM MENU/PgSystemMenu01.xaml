<Page x:Class="Development.PgSystemMenu01"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Development"
      mc:Ignorable="d" 
      d:DesignHeight="790" d:DesignWidth="1300"
      Focusable="True"
      PreviewMouseDown ="Page_PreviewMouseDown"
      Title="PgSystemMenu01">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="220"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1" Background="{StaticResource HeaderBackground}" Margin="0,5,5,5" CornerRadius="12">
            <Grid>
                <StackPanel Margin="10">
                    <Label Content="SYSTEM MENU" Foreground="White" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,10,0,20"/>

                    <Button x:Name="btMenuTab01" Background="SteelBlue" Foreground="White" BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        OPTIONS PC
                    </Button>
                    <Button x:Name="btMenuTab02"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        OPTIONS MACHINE
                    </Button>
                    
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="15">
                    <TextBlock Text="ITM" Foreground="#AED6F1" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Semiconductor" Foreground="White" Opacity="0.7" FontSize="12"/>
                    <TextBlock Text="AUTOMATION TEAM" Foreground="White" Opacity="0.5" FontSize="10"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Border Grid.Row="0" Background="{StaticResource HeaderBackground}" Margin="5,5,5,5" CornerRadius="8">
                    <Label Content="SYSTEM MENU" Foreground="White" FontSize="24" FontWeight="Bold" 
                  VerticalAlignment="Center" Margin="20,0,0,0">
                        <Label.Effect>
                            <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                        </Label.Effect>
                    </Label>
                </Border>
            </Grid>


            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0"></RowDefinition>
                    <RowDefinition></RowDefinition>

                </Grid.RowDefinitions>




                <Grid Grid.Row="1" Margin="10,0,10,0">

                    <Grid.Resources>
                        <Style TargetType="GroupBox">
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="Gray"/>
                            <Setter Property="Margin" Value="2,2,2,2"/>
                        </Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ssButton}">
                            <Setter Property="FontSize" Value="24"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Margin" Value="9,9,9,9"/>
                            <Setter Property="Background" Value="White"/>
                        </Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Margin" Value="5,5,5,5"/>
                        </Style>
                        <Style TargetType="TextBlock" x:Key="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="Foreground" Value="black"/>
                        </Style>
                        <Style TargetType="TextBlock" x:Key="TextBlock2">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="Margin" Value="10,0,0,0"/>
                        </Style>
                        <Style TargetType="Rectangle" x:Key="Rect2">
                            <Setter Property="Width" Value="25"/>
                            <Setter Property="Height" Value="18"/>
                            <Setter Property="Fill" Value="White"/>
                            <Setter Property="StrokeThickness" Value="2"/>
                            <Setter Property="Stroke" Value="Silver"/>
                        </Style>
                        <Style TargetType="Rectangle">
                            <Setter Property="Width" Value="100"/>
                            <Setter Property="Height" Value="10"/>
                            <Setter Property="Fill" Value="White"/>
                            <Setter Property="StrokeThickness" Value="2"/>
                            <Setter Property="Stroke" Value="Gray"/>
                        </Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="Margin" Value="4,2,4,2"/>
                        </Style>
                    </Grid.Resources>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <!--<ColumnDefinition Width="*"/>-->
                    </Grid.ColumnDefinitions>


                    <UniformGrid Grid.Column="0" Columns="1" Rows="7" VerticalAlignment="Top">
                        <GroupBox Header="[MES ONLINE]" Height="90">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="btMesOn" Grid.Column="0" FontSize="20" BorderThickness="0.1"> MES ONLINE</Button>
                                <Button x:Name="btMesOff" Grid.Column="1" FontSize="20" BorderThickness="0.1">MES OFFLINE</Button>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="[ON SCANNER]" Height="90">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="btOnScanner" Grid.Column="0" FontSize="20" BorderThickness="0.1">ON</Button>
                                <Button x:Name="btOffScanner" Grid.Column="1" FontSize="20" BorderThickness="0.1">OFF</Button>
                            </Grid>
                        </GroupBox>
                       


                    </UniformGrid>

                    <UniformGrid Grid.Column="1" Columns="1" Rows="7" VerticalAlignment="Top">

                        <GroupBox Header="[MES EXCLUTSION]" Height="90">
                            <Grid>
                                <TextBox x:Name="tbExclusion" Padding="10,0,0,0" VerticalContentAlignment="Center" BorderBrush="Black">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Grid>
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                            <TextBlock Text="A;B;C;1;2;3..." Foreground="Gray" Margin="10,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Grid>
                        </GroupBox>

                       

                    </UniformGrid>

                    <UniformGrid Grid.Column="2" Columns="1" Rows="7">

                        

                    </UniformGrid>

                </Grid>
            </Grid>
        </Grid>


    </Grid>
</Page>
