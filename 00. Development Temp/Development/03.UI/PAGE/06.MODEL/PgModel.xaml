<Page x:Class="Development.PgModel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Development"
      mc:Ignorable="d" 
      d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgModel">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.Resources>

                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="White" />
                    <Setter Property="BorderThickness" Value="0"/>

                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="Black"/>

                </Style>

            </Grid.Resources>
            <Border Background="{StaticResource HeaderBackground}" Margin="0,5,5,5" CornerRadius="12">
                <Grid>
                    <StackPanel VerticalAlignment="Bottom" Margin="15">
                        <TextBlock Text="ITM" Foreground="#AED6F1" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Semiconductor" Foreground="White" Opacity="0.7" FontSize="12"/>
                        <TextBlock Text="AUTOMATION TEAM" Foreground="White" Opacity="0.5" FontSize="10"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="10">
                        <Label Content="MODEL MENU" Foreground="White" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,10,0,20"/>
                        <Button x:Name="btSetting1"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                            MODEL
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="75"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="{StaticResource HeaderBackground}" Margin="5,5,5,5" CornerRadius="8">
                <Label Grid.Column="0" Content="MENU CHANGE MODEL" Foreground="White" FontSize="35" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Label.Effect>
                        <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                    </Label.Effect>
                </Label>
            </Border>
            <Grid Grid.Row="1" Margin=" 0 2 0 0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="60"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="1.1*"></RowDefinition>

                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <!--<Grid.Background>
                 <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                     <GradientStop Color="White" Offset="0"/>
                     <GradientStop Color="#879ec0" Offset="1.1"/>
                 </LinearGradientBrush>
             </Grid.Background>-->
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="0.5*"></ColumnDefinition>
                        <ColumnDefinition Width="3.5*"></ColumnDefinition>

                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"   Content="Curent Model Name " Foreground="Black" FontSize="21" FontWeight="Bold"></Label>
                    <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                        <Label Name="lblModelNo" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" Content="00" FontFamily="Bahnschrift SemiBold Condensed" FontSize="35"></Label>
                    </Border>
                    <Border Margin="0,5,5,5" Grid.Column="2" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                        <Label Name="lblModel" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" Content="Model Null" FontFamily="Bahnschrift SemiBold Condensed" FontSize="35"></Label>
                    </Border>

                </Grid>
                <Grid  Grid.Row="1">
                    <Grid.Resources>

                        <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Margin" Value="0,5,5,5" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Background" Value="#333333" />
                            <Setter Property="BorderThickness" Value="0.7"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource HeaderBackground}" Margin="5,5,5,5" CornerRadius="8">
                        <Label Grid.Column="0" Content="MANAGEMENT MODEL" Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="10,-5,0,0">
                            <Label.Effect>
                                <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                            </Label.Effect>
                        </Label>
                    </Border>
                    <Grid Grid.Row="1" Margin=" 0 0 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btSelectModel01" Margin="2">Model 01</Button>
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox Name="txbModel1" Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Text="Model Null" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="2" Margin=" 0 0 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btSelectModel02" Margin="2">Model 02</Button>
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox Name="txbModel2"   Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Text="Model Null" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="3" Margin=" 0 0 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btSelectModel03" Margin="2">Model 03</Button>
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox Name="txbModel3"  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Text="Model Null" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="4" Margin=" 0 0 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btSelectModel04" Margin="2">Model 04</Button>
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox Name="txbModel4"  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Text="Model Null" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="5" Margin=" 0 0 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btSelectModel05" Margin="2">Model 05</Button>
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox Name="txbModel5"  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Text="Model Null" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="6" Margin=" 0 0 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btSelectModel06" Margin="2">Model 06</Button>
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox Name="txbModel6"  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Text="Model Null" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="7" Margin=" 0 0 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btSelectModel07" Margin="2">Model 07</Button>
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox Name="txbModel7"  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Text="Model Null" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="8" Margin=" 0 0 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btSelectModel08" Margin="2">Model 08</Button>
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox Name="txbModel8"  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Text="Model Null" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="9" Margin=" 0 0 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btSelectModel09" Margin="2">Model 09</Button>
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox Name="txbModel9"  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Text="Model Null" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="10" Margin=" 0 0 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btSelectModel10" Margin="2">Model 10</Button>
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox Name="txbModel10"  Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Text="Model Null" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></TextBox>
                        </Border>
                    </Grid>





                </Grid>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="45"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="{StaticResource HeaderBackground}" Margin="5,5,5,5" CornerRadius="8">
                        <Label Grid.Column="0" Content="LOAD/SAVE MODEL" Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="10,-5,0,0">
                            <Label.Effect>
                                <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                            </Label.Effect>
                        </Label>
                    </Border>
                    <Grid Grid.Row="1">
                        <Grid.Resources>
                            <Style TargetType="{x:Type Label}">
                                <Setter Property="Foreground" Value="Black" />
                                <Setter Property="Padding" Value="5,0" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="25" />
                                <Setter Property="FontFamily" Value="arial "/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>

                            <Style TargetType="TextBlock">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Cyan"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="25"/>
                                <Setter Property="Padding" Value="1,1,1,1"/>
                            </Style>

                            <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                                <Setter Property="FontSize" Value="25" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Margin" Value="0,5,5,5" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Background" Value="#333333" />
                                <Setter Property="BorderThickness" Value="0.7"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="90"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label  Grid.Column="0" Margin="2,2,2,2" Content="Select Model No"></Label>
                        <Border Grid.Column="1" Margin="10" Background="Black">
                            <TextBlock x:Name="txtSelectModel" Text="0" Padding="0"></TextBlock>
                        </Border>
                        <Button x:Name="btSaveModel" Grid.Column="2" Margin="10">Save Model</Button>
                        <Button x:Name="btLoadModel" Grid.Column="3" Margin="10">Load Model</Button>
                        <Button x:Name="BtnDeleteModel" Grid.Column="4" Margin="10">Delete Model</Button>
                    </Grid>



                    <Border Grid.Row="2" Background="{StaticResource HeaderBackground}" Margin="5,5,5,5" CornerRadius="8">
                        <Label Grid.Column="0" Content="COPY MODEL DATA" Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="10,-5,0,0">
                            <Label.Effect>
                                <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                            </Label.Effect>
                        </Label>
                    </Border>
                    <Grid Grid.Row="3">
                        <Grid.Resources>
                            <Style TargetType="{x:Type Label}">
                                <Setter Property="Foreground" Value="Black" />
                                <Setter Property="Padding" Value="5,0" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="25" />
                                <Setter Property="FontFamily" Value="arial "/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>

                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="Cyan"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="25"/>
                                <Setter Property="Padding" Value="1,1,1,1"/>
                            </Style>

                            <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                                <Setter Property="FontSize" Value="25" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Margin" Value="0,5,5,5" />
                                <Setter Property="Background" Value="#333333" />
                                <Setter Property="BorderThickness" Value="0.7"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="90"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="90"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label  Grid.Column="0" Margin="2,2,2,2" Content="Select Model No"></Label>
                        <TextBox x:Name="TbxModelCopy"  Grid.Column="1" Margin="10" Text="0"></TextBox>
                        <Label  Grid.Column="2" Margin="2,2,2,2" Content="Select Model No"></Label>
                        <TextBox x:Name="TbxModelPaste"  Grid.Column="3" Margin="10" Text="0"></TextBox>
                        <Button x:Name="BtnCopyData" Grid.Column="4" Margin="10">Copy Data</Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>


    </Grid>
</Page>
