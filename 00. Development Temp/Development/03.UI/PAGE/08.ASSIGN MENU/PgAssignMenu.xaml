<Page x:Class="Development.PgAssignMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Development"
      mc:Ignorable="d" 
     d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgAssignMenu">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="220"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1" Background="{StaticResource HeaderBackground}" Margin="0,5,5,5" CornerRadius="12">
            <Grid>
                <StackPanel Margin="10">
                    <Label Content="SYSTEM MENU" Foreground="White" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,10,0,20"/>
                    <Button x:Name="btSetting1" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="50 0 0 0" FontSize="15" Content="SETTING APP" Height="50" Margin="0,5" Style="{StaticResource sButton}" Background="#2980B9" Foreground="White" BorderThickness="0"/>
                    <Button x:Name="btSetting2" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="50 0 0 0" FontSize="15" Content="SETTING ALARM" Height="50" Margin="0,5" Style="{StaticResource sButton}"/>
                 
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="15">
                    <TextBlock Text="ITM" Foreground="#AED6F1" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Semiconductor" Foreground="White" Opacity="0.7" FontSize="12"/>
                    <TextBlock Text="AUTOMATION TEAM" Foreground="White" Opacity="0.5" FontSize="10"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Column="0">
            <Grid.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="2 0 30 0" />
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="AliceBlue" />
                    <Setter Property="BorderThickness" Value="0.7"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="23" />
                    <Setter Property="FontFamily" Value="Arial"/>
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="300"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="190"></RowDefinition>
                <RowDefinition Height="140"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
               
                <Border Grid.Row="0" Background="{StaticResource HeaderBackground}" Margin="5,5,5,5" CornerRadius="8">
                    <Label Content="PLC SETTING" Foreground="White" FontSize="24" FontWeight="Bold" 
                             VerticalAlignment="Center" Margin="20,0,0,0">
                        <Label.Effect>
                            <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                        </Label.Effect>
                    </Label>
                </Border>

            </Grid>
            <Grid  Grid.Row="1" Margin="5">
                <Grid.Resources>

                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="23" />
                        <Setter Property="FontFamily" Value="Bahnschrift SemiBold Condensed"/>
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Foreground" Value="#444444"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Padding" Value="20 0 0 0"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="1">
                
                    <Grid Grid.Row="0">

                        <Border Grid.Row="0" Background="{StaticResource AccentBlue}" Margin="0" CornerRadius="8">
                            <Label  Content="PLC SETTING" Foreground="White" FontSize="20" FontWeight="Bold" 
                                     VerticalAlignment="Center" Margin="20,0,0,0">
                                <Label.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                                </Label.Effect>
                            </Label>
                        </Border>

                    </Grid>

                </Grid>

                <Grid Grid.Row="1" Margin=" 0 0 0 0">
                    <Grid.Resources>
                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Foreground" Value="#dd222222" />
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontSize" Value="24" />
                        </Style>

                        <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                            <Setter Property="FontSize" Value="24" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Margin" Value="0,5,5,5" />
                            <Setter Property="Background" Value="#ECECEC" />
                            <Setter Property="BorderThickness" Value="0.7"/>
                            <Setter Property="BorderBrush" Value="Black"/>

                        </Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="15" />
                            <Setter Property="FontFamily" Value="Arial"/>
                            <Setter Property="FontWeight" Value="ExtraLight" />
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="20 0 0 0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>

                        </Style>

                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="500"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Grid.Column="1">
                        <Label Content="FTP SERVER URL" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Label Content="USER LOGIN" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="1">
                        <Label Content="USER NAME" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="1">
                        <Label Content="PASSWORD" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                    </Grid>
                    <Grid Grid.Row="4" Grid.Column="1">
                        <Label Content="NAME APP OPEN" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                    </Grid>




                    <Grid Grid.Row="0" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
  
                            <TextBox x:Name="tbxUrlFTP" Grid.Column="2" Margin="2" Height="30" Text="URL" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 0">

                                <ToggleButton x:Name="btSwitchLogin"  Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Column="1">
                           
                               <Label Content="AUTO CHECK UPDATE" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                            
                        </Grid>
                        <Grid Grid.Column="2">
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 0">
                                <ToggleButton x:Name="btSwitchAutoCheckUpdate"  Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                            </StackPanel>
                        </Grid>

                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox x:Name="tbxUseNameFTP"  Grid.Row="0" Text="UseNameFTP"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >

                            <TextBox x:Name="tbxPassWordFTP"  Grid.Row="0" Text="PassWordFTP"></TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="4" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >

                            <TextBox x:Name="tbxNameAppFTP"  Grid.Row="0" Text="NameAppFTP"></TextBox>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.Resources>

                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="23" />
                        <Setter Property="FontFamily" Value="Bahnschrift SemiBold Condensed"/>
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Foreground" Value="#444444"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Padding" Value="20 0 0 0"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0 0 0 0">
                 
                    <Border Grid.Row="0" Background="{StaticResource AccentBlue}" Margin="0" CornerRadius="8">
                        <Label Content="SETTING MACHINE NAME" Foreground="White" FontSize="20" FontWeight="Bold" 
                                        VerticalAlignment="Center" Margin="20,0,0,0">
                            <Label.Effect>
                                <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                            </Label.Effect>
                        </Label>
                    </Border>

                </Grid>

                <Grid Grid.Row="1">
                    <Grid.Resources>
                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Foreground" Value="#dd222222" />
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontSize" Value="24" />
                        </Style>

                        <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                            <Setter Property="FontSize" Value="24" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Margin" Value="0,5,5,5" />
                            <Setter Property="Background" Value="#ECECEC" />
                            <Setter Property="BorderThickness" Value="0.7"/>
                            <Setter Property="BorderBrush" Value="Black"/>

                        </Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="15" />
                            <Setter Property="FontFamily" Value="Arial"/>
                            <Setter Property="FontWeight" Value="ExtraLight" />
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="20 0 0 0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>

                        </Style>

                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="500"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Label Content="NAME MACHINE" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                    </Grid>

                    <Grid Grid.Row="4" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >

                            <TextBox x:Name="tbxNameMachine"  Grid.Row="0" Text="Name Machine"></TextBox>
                        </Border>
                    </Grid>
                </Grid>


            </Grid>
            <Grid Grid.Row="3">
                <Grid.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="Foreground" Value="#dd222222" />
                        <Setter Property="Padding" Value="5,0" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="FontSize" Value="24" />
                    </Style>

                    <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                        <Setter Property="FontSize" Value="24" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="0,5,5,5" />
                        <Setter Property="Background" Value="#ECECEC" />
                        <Setter Property="BorderThickness" Value="0.7"/>
                        <Setter Property="BorderBrush" Value="Black"/>

                    </Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="15" />
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontWeight" Value="ExtraLight" />
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="20 0 0 0"/> 
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>

                    </Style>

                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0 0 0 0">
                   
                    <Border Grid.Row="0" Background="{StaticResource AccentBlue}" Margin="0" CornerRadius="8">
                        <Label Content="SETTING USER LOGIN MES" Foreground="White" FontSize="20" FontWeight="Bold" 
                                        VerticalAlignment="Center" Margin="20,0,0,0">
                            <Label.Effect>
                                <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                            </Label.Effect>
                        </Label>
                    </Border>

                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="500"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Label Content="LOGIN MES" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Label Content="LABEL MES OP" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="1">
                        <Label Content="LABEL MES ME" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                    </Grid>




                    <Grid Grid.Row="0" Grid.Column="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 0">
                                <ToggleButton x:Name="btSwitchLoginApp"  Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Label Content="LOGIN APP" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                        </Grid>

                        <Grid Grid.Column="2">
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 0">
                                <ToggleButton x:Name="btSwitchLoginAppInital"  Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                            </StackPanel>
                        </Grid>

                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox x:Name="tbxMESOP"  Grid.Row="0" Text="Label OP"></TextBox>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="2">
                        <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                            <TextBox x:Name="tbxMESME"  Grid.Row="0" Text="Label ME"></TextBox>
                        </Border>
                    </Grid>
                </Grid>


            </Grid>


            <!--row 4-->
            <Grid Grid.Row="4">
                <Grid.Resources>

                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="23" />
                        <Setter Property="FontFamily" Value="Bahnschrift SemiBold Condensed"/>
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Foreground" Value="#444444"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Padding" Value="20 0 0 0"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0 0 0 0">
                  
                    <Border Grid.Row="0" Background="{StaticResource AccentBlue}" Margin="0" CornerRadius="8">
                        <Label Content="SYSTEM" Foreground="White" FontSize="20" FontWeight="Bold" 
                                        VerticalAlignment="Center" Margin="20,0,0,0">
                            <Label.Effect>
                                <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                            </Label.Effect>
                        </Label>
                    </Border>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="300"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Label Content="LOCK SETTING PLC" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                    </Grid>







                    <Grid Grid.Row="0" Grid.Column="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 0">
                                <ToggleButton x:Name="btSwitchLockPLC"  Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                            </StackPanel>
                        </Grid>


                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Label Content="LANGUAGE" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="3">
                        <Label Content="WirteLog PgMain" Style="{StaticResource SectionHeader}" Opacity="0.9" Margin="4" HorizontalContentAlignment="Left" Padding="20,0,0,0"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="4" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 0">
                                <ToggleButton x:Name="btSwitchWriteLog"  Style="{StaticResource ToggleSwitchStyle}"></ToggleButton>
                            </StackPanel>
                        </Grid>


                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="2">


                        <Border CornerRadius="8" Width="226" Background="#FFF" BorderBrush="#CCC" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <ComboBox x:Name="cbLanguage"
                                 Margin="3"
                                 Width="220"
                                 Height="40"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Padding="8,4"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 HorizontalContentAlignment="Left"
                                 VerticalContentAlignment="Center"
                                 SelectionChanged="cbLanguage_SelectionChanged"
                                 Background="#FFF"  
                                 BorderThickness="0">
                                <ComboBoxItem Tag="en">🇺🇸 English - English</ComboBoxItem>
                                <ComboBoxItem Tag="vi">🇻🇳 Tiếng Việt - VietNam</ComboBoxItem>
                                <ComboBoxItem Tag="ja">🇯🇵 日本語 - Japan</ComboBoxItem>
                                <ComboBoxItem Tag="ko">🇰🇷 한국어 - Korean</ComboBoxItem>
                                <ComboBoxItem Tag="zh">🇨🇳 中文 - China</ComboBoxItem>

                            </ComboBox>
                        </Border>



                    </Grid>


                </Grid>


            </Grid>


        </Grid>


    </Grid>
</Page>
