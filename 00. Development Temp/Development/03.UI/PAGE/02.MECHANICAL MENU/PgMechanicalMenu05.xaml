<Page x:Class="Development.PgMechanicalMenu05"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Development"
      mc:Ignorable="d" 
       d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgMechanicalMenu05">

    <Grid Background="White">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="220"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="1" Background="{StaticResource HeaderBackground}" Margin="0,5,5,5" CornerRadius="12">
            <Grid>
                <StackPanel Margin="10">
                    <Label Content="SYSTEM MENU" Foreground="White" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,10,0,20"/>

                    <Button x:Name="btMenuTab01"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        PLC
                    </Button>
                    <Button x:Name="btMenuTab02"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        MES TCP
                    </Button>
                    <Button x:Name="btMenuTab03"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        SCANNER TCP
                    </Button>
                    <!--<Button x:Name="btMenuTab04"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                SCANNER COM
            </Button>-->
                    <Button x:Name="btMenuTab05" Background="SteelBlue" Foreground="White" BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        LASER COM
                    </Button>

                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="15">
                    <TextBlock Text="ITM" Foreground="#AED6F1" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Semiconductor" Foreground="White" Opacity="0.7" FontSize="12"/>
                    <TextBlock Text="AUTOMATION TEAM" Foreground="White" Opacity="0.5" FontSize="10"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border CornerRadius=" 10 " Margin="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="1"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label  FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect>LASER COM SETTING
                </Label>
            </Grid>
            <Grid Grid.Row="1" Background="#DDDDDD">
                <Grid.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="Foreground" Value="#dd222222" />
                        <Setter Property="Padding" Value="5,0" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="FontSize" Value="24" />
                    </Style>

                    <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="0.2" />
                        <Setter Property="Background" Value="#ECECEC" />
                        <Setter Property="BorderThickness" Value="0.5"/>
                        <Setter Property="BorderBrush" Value="Black"/>

                    </Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="18" />
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontWeight" Value="Light" />
                        <Setter Property="Foreground" Value="Black"/>

                    </Style>

                </Grid.Resources>

                <Grid Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1.5*"></ColumnDefinition>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,5,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Label Content="Logs" Style="{StaticResource SectionHeader}" Opacity="0.9" />
                            <TextBox Grid.Row="1" x:Name="txtLogs" Text="{Binding rxLog}" Background="Black" Foreground="White" BorderThickness="0" VerticalContentAlignment="Top" FontFamily="Consolas" FontSize="13" Margin="0" VerticalScrollBarVisibility="Visible"/>
                            <Button Grid.Row="2" x:Name="btLogClear" Content="Clear Logs" Margin="5,5" Style="{StaticResource sButton}"/>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Label Grid.Column="0" Margin="2" FontWeight="Bold" Padding="30 0 0 0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#333333" FontSize="20" Foreground="White">SETTING COM</Label>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Button Grid.Column="0" Grid.Row="0" x:Name="btSetting">Setting</Button>
                            <Button Grid.Column="1" Grid.Row="0" x:Name="btSave">Save</Button>
                            <Button Grid.Column="0" Grid.Row="1" x:Name="btOpen">Open</Button>
                            <Button Grid.Column="1" Grid.Row="1" x:Name="btClose">Close</Button>
                            <Button Grid.Column="0" Grid.Row="2" x:Name="btSend">Send Test</Button>
                            <Button Grid.Column="1" Grid.Row="2" x:Name="btPattern">Pattern Setting</Button>
                            <Grid Grid.Column="0" Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="120"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Background="LightCoral" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="22">Program set</Label>
                                <TextBox Grid.Column="1" x:Name="txtPrgLaser" Background="LightCyan" Margin="2,2,2,2" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="22" IsReadOnly="True">0</TextBox>
                            </Grid>
                            <Button Grid.Column="1" Grid.Row="3" x:Name="btTrigger">Run Marking Laser</Button>
                            <Grid Grid.Column="0" Grid.Row="4">
                                <UniformGrid Columns="3" Rows="2" Margin="3">
                                    <local:RectangleLamp
                                         Margin="1"
                                         IsTabItem="False"
                                         DeviceLamp="L" AddressLamp="10720"
                                         TextON="ERR"
                                         TextOFF="ERR"
                                         Background="LightGray"
                                         FontSize="14"
                                         Foreground="Black"
                                         BackgroundLampOFF="Transparent"
                                         BackgroundLampON="Red"
>
                                    </local:RectangleLamp>
                                    <local:RectangleLamp
                                         Margin="1"
                                         IsTabItem="False"
                                         DeviceLamp="L" AddressLamp="10721"
                                         TextON="WAR"
                                         TextOFF="WAR"
                                         Background="LightGray"
                                         FontSize="14"
                                         Foreground="Black"
                                         BackgroundLampOFF="Transparent"
                                         BackgroundLampON="Orange"
>
                                    </local:RectangleLamp>
                                    <local:RectangleLamp
                                         Margin="1"
                                         IsTabItem="False"
                                         DeviceLamp="L" AddressLamp="10722"
                                         TextON="RD"
                                         TextOFF="RD"
                                         Background="LightGray"
                                         FontSize="14"
                                         Foreground="Black"
                                         BackgroundLampOFF="Transparent"
                                         BackgroundLampON="GreenYellow"
>
                                    </local:RectangleLamp>
                                    <local:RectangleLamp
                                         Margin="1"
                                         IsTabItem="False"
                                         DeviceLamp="L" AddressLamp="10723"
                                         TextON="MARKING"
                                         TextOFF="MARKING"
                                         Background="LightGray"
                                         FontSize="14"
                                         Foreground="Black"
                                         BackgroundLampOFF="Transparent"
                                         BackgroundLampON="Yellow"
>
                                    </local:RectangleLamp>
                                    <local:RectangleLamp
                                         Margin="1"
                                         IsTabItem="False"
                                         DeviceLamp="L" AddressLamp="10724"
                                         TextON="COMP"
                                         TextOFF="COMP"
                                         Background="LightGray"
                                         FontSize="14"
                                         Foreground="Black"
                                         BackgroundLampOFF="Transparent"
                                         BackgroundLampON="Yellow"
>
                                    </local:RectangleLamp>
                                    
                                </UniformGrid>
                            </Grid>

                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" x:Name="btAllPos">All Pos</Button>
                            <Button Grid.Column="1" x:Name="btClrPos">Clear Pos</Button>
                        </Grid>
                        <Grid Grid.Row="1" x:Name="gridPos" Background="Gray" Margin="5">
                            <Grid.Resources>
                                <Style TargetType="{x:Type Label}">
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Margin" Value="1,1,1,1" />
                                    <Setter Property="Padding" Value="2,0,2,0" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="FontSize" Value="8" />
                                    <Setter Property="FontWeight" Value="Normal" />
                                </Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </Grid.Resources>
                        </Grid>
                    </Grid>


                </Grid>
            </Grid>
        </Grid>


    </Grid>
</Page>
