<Page x:Class="Development.PgMechanicalMenu04"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Development"
      mc:Ignorable="d" 
      d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgMechanicalMenu04">

    <Page.Resources>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#ABB2B9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <Style x:Key="SectionHeader" TargetType="Label">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="220"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1" Background="{StaticResource HeaderBackground}" Margin="0,5,5,5" CornerRadius="12">
            <Grid>
                <StackPanel Margin="10">
                    <Label Content="SYSTEM MENU" Foreground="White" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,10,0,20"/>

                    <Button x:Name="btMenuTab01"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        PLC
                    </Button>
                    <Button x:Name="btMenuTab02"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        MES TCP
                    </Button>
                    <Button x:Name="btMenuTab03"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        SCANNER TCP
                    </Button>
                    <Button x:Name="btMenuTab04" Background="SteelBlue" Foreground="White" BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        SCANNER COM
                    </Button>
                    <Button x:Name="btMenuTab05"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                        LASER COM
                    </Button>

                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" Margin="15">
                    <TextBlock Text="ITM" Foreground="#AED6F1" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Semiconductor" Foreground="White" Opacity="0.7" FontSize="12"/>
                    <TextBlock Text="AUTOMATION TEAM" Foreground="White" Opacity="0.5" FontSize="10"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Border Grid.Row="0" Background="{StaticResource HeaderBackground}" Margin="5,5,5,5" CornerRadius="8">
                    <Label Content="SCANNER COM SETTING" Foreground="White" FontSize="24" FontWeight="Bold" 
                                    VerticalAlignment="Center" Margin="20,0,0,0">
                        <Label.Effect>
                            <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                        </Label.Effect>
                    </Label>
                </Border>
            </Grid>
            <Grid Grid.Row="1" Background="#DDDDDD">
                <Grid.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="Foreground" Value="#dd222222" />
                        <Setter Property="Padding" Value="5,0" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="FontSize" Value="24" />
                    </Style>

                    <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                        <Setter Property="FontSize" Value="24" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="0,5,5,5" />
                        <Setter Property="Background" Value="#ECECEC" />
                        <Setter Property="BorderThickness" Value="0.7"/>
                        <Setter Property="BorderBrush" Value="Black"/>

                    </Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="18" />
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontWeight" Value="Light" />
                        <Setter Property="Foreground" Value="Black"/>

                    </Style>

                </Grid.Resources>

                <Grid Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1.5*"></ColumnDefinition>
                        
                    </Grid.ColumnDefinitions>
                  
                    <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,5,0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Label Content="Logs" Style="{StaticResource SectionHeader}" Opacity="0.9" />
                            <TextBox Grid.Row="1" x:Name="txtLogs" Text="{Binding rxLog}" Background="Black" Foreground="White" 
                                    BorderThickness="0" VerticalContentAlignment="Top" FontFamily="Consolas" FontSize="13" Margin="0" VerticalScrollBarVisibility="Visible"/>
                            <Button Grid.Row="2" x:Name="btLogClear" Content="Clear Logs" Margin="5,5" Style="{StaticResource sButton}"/>
                        </Grid>
                    </Border>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Label Content="SETTING SCANNER" Style="{StaticResource SectionHeader}" FontSize="20" Opacity="0.9" />
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="80"></RowDefinition>
                                <RowDefinition Height="80"></RowDefinition>
                                <RowDefinition Height="80"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Button Grid.Column="0" x:Name="btSetting" Content="SETTING" Height="40" Margin="2" Style="{StaticResource sButton}"/>
                            <Button Grid.Column="1" x:Name="btSave" Content="SAVE SETTING" Height="40" Margin="2" Style="{StaticResource sButton}"/>

                            <Button Grid.Column="0" Grid.Row="1" x:Name="btOpen" Content="OPEN" Height="40" Margin="2" Style="{StaticResource sButton}"/>
                            <Button Grid.Column="1" Grid.Row="1" x:Name="btClose" Content="CLOSE" Height="40" Margin="2" Style="{StaticResource sButton}"/>
                            <Button Grid.Column="2" Grid.Row="1" x:Name="btRead" Content="TRIGGER" Height="40" Margin="2" Style="{StaticResource sButton}"/>

                        </Grid>
                    </Grid>


                </Grid>
            </Grid>
        </Grid>


    </Grid>
</Page>
