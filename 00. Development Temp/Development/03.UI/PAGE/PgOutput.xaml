<Page x:Class="Development.PgOutput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Development"
      mc:Ignorable="d" 
     d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgOutput">

    <Grid Background="#fff0f0f0" >


        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="220"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" Background="{StaticResource HeaderBackground}" Margin="0,5,5,5" CornerRadius="12">
                <Grid>
                    <StackPanel Margin="10">
                        <Label Content="I/O MENU" Foreground="White" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,10,0,20"/>

                        <Button x:Name="btMenuTab01"  BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                            INPUT PLC
                        </Button>
                        <Button x:Name="btMenuTab02" Background="SteelBlue" Foreground="White" BorderThickness="0" FontWeight="Bold" HorizontalContentAlignment="Left" Padding="5 0 0 0" FontSize="15"  Height="50" Margin="0,5" Style="{StaticResource sButton}">
                            OUTPUT PLC
                        </Button>

                    </StackPanel>

                    <StackPanel VerticalAlignment="Bottom" Margin="15">
                        <TextBlock Text="ITM" Foreground="#AED6F1" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Semiconductor" Foreground="White" Opacity="0.7" FontSize="12"/>
                        <TextBlock Text="AUTOMATION TEAM" Foreground="White" Opacity="0.5" FontSize="10"/>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid Grid.Column="0">
                <Grid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                        <Setter Property="FontSize" Value="24" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="0,5,5,5" />
                        <Setter Property="Background" Value="#6787c0" />
                        <Setter Property="BorderThickness" Value="0"/>

                    </Style>


                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="10"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                   
                    <Border Grid.Row="0" Background="{StaticResource HeaderBackground}" Margin="5,5,5,5" CornerRadius="8">
                        <Label Content="PAGE OUTPUT" Foreground="White" FontSize="24" FontWeight="Bold" 
                                VerticalAlignment="Center" Margin="20,0,0,0">
                            <Label.Effect>
                                <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                            </Label.Effect>
                        </Label>
                    </Border>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid Background="#879ec0" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="50"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1">
                            <Border CornerRadius=" 0 ">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#34495E" Offset="0"/>
                                        <GradientStop Color="White" Offset="2"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <StackPanel Orientation="Horizontal">
                                <Label  FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                                    <Label.Effect>
                                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                                    </Label.Effect> Page >
                                </Label>
                                <Button   Width="80" Foreground="Black" Background="White">
                                    <Label x:Name="lbPage" VerticalContentAlignment="Center" >0</Label>
                                </Button>
                                <Label  FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                                    <Label.Effect>
                                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                                    </Label.Effect> >
                                </Label>
                                <!--<Button Name="btnIn1" Content="1" Width="80" Foreground="White"></Button>-->
                                <!--<Button Name="btnOut" Width="80"
             Content="{Binding ElementName=btnIn, Mode=OneWay,Path=Content}"
             ></Button>-->
                                <!--<Button Name="btnIn2" Content="2" Width="80" Foreground="White"></Button>
                             <Button Name="btnIn3" Content="3" Width="80" Foreground="White"></Button>
                             <Button Name="btnIn4" Content="4" Width="80" Foreground="White"></Button>
                             <Button Name="btnIn5" Content="5" Width="80" Foreground="White"></Button>
                             <Button Name="btnIn6" Content="6" Width="80" Foreground="White"></Button>
                             <Button Name="btnIn7" Content="7" Width="80" Foreground="White"></Button>
                             <Button Name="btnIn8" Content="8" Width="80" Foreground="White"></Button>
                             <Button Name="btnIn9" Content="9" Width="80" Foreground="White"></Button>-->

                                <Button Name="btnFirt"  Width="50" Foreground="White">
                                    &lt;&lt;
                                </Button>
                                <Button Name="btnBack"  Width="50" Foreground="White">
                                    &lt;
                                </Button>
                                <!--<TextBox x:Name="tbPage" Height="45" Width="45" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" Style="{StaticResource TextBoxDisplay}">0</TextBox>-->
                                <Button Name="btnNext"  Width="50" Foreground="White">
                                    &gt;
                                </Button>
                                <Button Name="btnLate"  Width="50" Foreground="White">
                                    &gt;&gt;
                                </Button>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Name="grd0001">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                    <ColumnDefinition Width="3*"></ColumnDefinition>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                            </Grid>
                            <Grid Grid.Column="1" Name="grd0002">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                    <ColumnDefinition Width="3*"></ColumnDefinition>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                            </Grid>
                        </Grid>

                    </Grid>
                </Grid>
                <Grid Grid.Row="2">
                    <Border CornerRadius=" 0 ">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#879ec0" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
