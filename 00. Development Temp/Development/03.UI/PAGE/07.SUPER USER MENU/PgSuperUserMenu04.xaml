                        <Label Content="4"/>
                        <Label Content="5"/>
                        <Label Content="6"/>
                        <Label Content="7"/>
                        <Label Content="8"/>
                        <Label Content="9"/>-->

                    </UniformGrid>
                    <UniformGrid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Columns="1" Rows="20">
                        <Label HorizontalContentAlignment="Left" Content="U2#7 PUSHER LP" Margin="0 2 0 2" BorderThickness="0 1 0 1" Background="LightGray" Foreground="Blue"/>
                        <Label HorizontalContentAlignment="Left">ACC TIME</Label>
                        <Label HorizontalContentAlignment="Left">DEC TIME</Label>
                        <Label HorizontalContentAlignment="Left">SPEED LIMIT</Label>
                        <Label HorizontalContentAlignment="Left">ORG SPEED</Label>
                        <Label HorizontalContentAlignment="Left">JOG HIGH SPEED</Label>
                        <Label HorizontalContentAlignment="Left">JOG LOW SPEED</Label>
                        <Label HorizontalContentAlignment="Left">CURRENT SPEED</Label>
                        <Label HorizontalContentAlignment="Left"></Label>
                        <Label HorizontalContentAlignment="Left"></Label>

                        <!--<Label HorizontalContentAlignment="Left" Content="U2#8 " Margin="0 2 0 2" BorderThickness="0 1 0 1" Background="LightGray" Foreground="Blue"/>
                        <Label HorizontalContentAlignment="Left">ACC TIME</Label>
                        <Label HorizontalContentAlignment="Left">DEC TIME</Label>
                        <Label HorizontalContentAlignment="Left">SPEED LIMIT</Label>
                        <Label HorizontalContentAlignment="Left">ORG SPEED</Label>
                        <Label HorizontalContentAlignment="Left">JOG HIGH SPEED</Label>
                        <Label HorizontalContentAlignment="Left">JOG LOW SPEED</Label>
                        <Label HorizontalContentAlignment="Left">CURRENT SPEED</Label>
                        <Label HorizontalContentAlignment="Left"></Label>
                        <Label HorizontalContentAlignment="Left"></Label>-->

                    </UniformGrid>
                    <UniformGrid Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="1" Columns="1" Rows="20">
                        <Label Margin="0 2 2 2" BorderThickness="0 1 1 1" Background="LightGray" Foreground="Blue"></Label>
                        <local:DataDWord_D
                            NoOfDisplay="4"
                            NoOfDecimalDigits="0"
                            CodeDevice="D" Device="2014"
                            IsReadOnly="False"
                            Foreground="Aqua"
>
                        </local:DataDWord_D>
                        <local:DataDWord_D
                            NoOfDisplay="4"
                            NoOfDecimalDigits="0"
                            CodeDevice="D" Device="2054"
                            IsReadOnly="False"
                            Foreground="Aqua"
