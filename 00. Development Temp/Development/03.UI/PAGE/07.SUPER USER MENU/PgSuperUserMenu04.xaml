                        </local:DataDWord_D>
                        <local:DataDWord_D
                            NoOfDisplay="4"
                            NoOfDecimalDigits="3"
                            CodeDevice="D" Device="2554"
                            IsReadOnly="True"
>
                        </local:DataDWord_D>
                        <Label HorizontalContentAlignment="Left"></Label>
                        <Label HorizontalContentAlignment="Left"></Label>

